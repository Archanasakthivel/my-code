#include<stdio.h>
#include<string.h>
int main()
{
    char s[100];
    int j=0,count=0,k=0,l,flag=0;

    scanf("%s",s);
    while(s[k]!= '\0' )
    {
    count++;
    k++;
    }
l=count/2;
      for(j=0;j<l;j++)
      {

          if(s[j]==s[count-1])
          {
           flag++;

          }

          count--;
      }
          if(flag==l)
          {
              printf("YES");
          }
          else
          {
              printf("NO");
          }


      }


