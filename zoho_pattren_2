#include<stdio.h>
int main()
{
int i,j,k,l,a=65,n,m,c;
c=a;
printf("enter the no of column");
scanf("%d",&n);
m=n/2+1;
for(i=1;i<=m;i++)
{
for(j=1;j<=m-i;j++)
{
printf(" ");
}
for(k=1;k<=i;k++)
{
printf("%c",a++);
}
--a;
if(i==1)
{
printf(" ");
}
else
{
for(l=2;l<=i;l++)
{
printf("%c",--a);
}
}
a=c;
printf("\n");
}
}




output:

enter the no of column9
    A
   ABA
  ABCBA
 ABCDCBA
ABCDEDCBA

